<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textAlignment="viewEnd" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4">

    <Button
        android:id="@+id/button_digit7"
        android:text="7"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onDigitClicked"/>

    <Button
        android:id="@+id/button_digit8"
        android:text="8"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onDigitClicked"/>

    <Button
        android:id="@+id/button_digit9"
        android:text="9"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onDigitClicked"/>

    <Button
        android:id="@+id/button_digit_add"
        android:text="+"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onDigitOpClicked"/>

     <Button
         android:id="@+id/button_digit4"
         android:text="4"
         android:layout_column="0"
         android:layout_row="1"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitClicked"/>

     <Button
         android:id="@+id/button_digit5"
         android:text="5"
         android:layout_column="1"
         android:layout_row="1"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitClicked"/>

     <Button
         android:id="@+id/button_digit6"
         android:text="6"
         android:layout_column="2"
         android:layout_row="1"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitClicked"/>


     <Button
         android:id="@+id/button_sou"
         android:text="-"
         android:layout_column="3"
         android:layout_row="1"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
        android:onClick="onDigitOpClicked"/>

     <Button
         android:id="@+id/button_digit1"
         android:text="1"
         android:layout_column="0"
         android:layout_row="2"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitClicked"/>

     <Button
         android:id="@+id/button_digit2"
         android:text="2"
         android:layout_column="1"
         android:layout_row="2"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitClicked"/>

     <Button
         android:id="@+id/button_digit3"
         android:text="3"
         android:layout_column="2"
         android:layout_row="2"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitClicked"/>

     <Button
         android:id="@+id/button_div"
         android:text="/"
         android:layout_column="3"
         android:layout_row="2"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitOpClicked"/>

    <Button
        android:id="@+id/button_digit0"
        android:text="0"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onDigitClicked"/>

     <Button
         android:id="@+id/button_digit_del"
         android:text="C"
         android:layout_column="1"
         android:layout_row="3"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitDeleteClicked"/>

     <Button
         android:id="@+id/button_digit_equ"
         android:text="="
         android:layout_column="2"
         android:layout_row="3"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onCalculClicked"/>

     <Button
         android:id="@+id/button_digit_mul"
         android:text="*"
         android:layout_column="3"
         android:layout_row="3"
         android:layout_rowWeight="1"
         android:layout_columnWeight="1"
         android:onClick="onDigitOpClicked"/>


    </GridLayout>

    <Button
        android:id="@+id/button_digit_info"
        android:text="Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onInfoClicked"/>

</LinearLayout>